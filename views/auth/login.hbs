<div class="signup-form">
<form action="/auth/login" method="POST">
<div class="signup-form-contents">
  <label style="padding: 10px"> Username:
    <input type="text" name="username" placeholder="Enter Username Here" style="border-radius: 15px; padding: 8px;">
  </label>
 </br>
  <label style="padding: 10px">   Password:
    <input type="password" name="password" placeholder="Enter Password Here" style="border-radius: 15px; padding: 8px;">
  </label>
</br>
  <button type="submit" style="border-radius: 5px; padding: 5px">Submit</button>
</form>
</div>
</div>

{{#if errorMessage}}
{{errorMessage}}
{{/if}}

